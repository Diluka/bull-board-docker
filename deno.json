{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": ["dist/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"],
      "exclude": ["dist/"]
    },
    "options": {
      "singleQuote": true,
      "lineWidth": 140
    }
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read src/index.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --watch src/index.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "docker compose -f docker-compose.test.yml run --rm sut"
  },
  "imports": {
    "@/": "./src/",
    "@bull-board/api": "npm:@bull-board/api@6.10.0",
    "@bull-board/api/bullAdapter.js": "npm:@bull-board/api@6.10.0/bullAdapter.js",
    "@bull-board/api/bullMQAdapter.js": "npm:@bull-board/api@6.10.0/bullMQAdapter.js",
    "@bull-board/express": "npm:@bull-board/express@6.10.0",
    "bull": "npm:bull@4.16.5", 
    "bullmq": "npm:bullmq@5.53.2",
    "ioredis": "npm:ioredis@5.6.1",
    "express": "npm:express@5.1.0",
    "express-session": "npm:express-session@1.18.1",
    "passport": "npm:passport@0.7.0",
    "passport-local": "npm:passport-local@1.0.0"
  }
}