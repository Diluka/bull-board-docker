{
  "name": "bull-board-docker",
  "version": "6.4.0",
  "type": "module",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "node ./node_modules/typescript/bin/tsc",
    "start": "node dist/index.js",
    "dev": "npx tsc --watch",
    "prestart": "npm run build",
    "pretest": "npm run test:stack:up",
    "test": "docker compose -f docker-compose.test.yml run --rm sut",
    "posttest": "npm run test:stack:down",
    "test:stack:up": "docker compose -f docker-compose.test.yml up -d --build bull-board",
    "test:stack:down": "docker compose -f docker-compose.test.yml down --rmi local",
    "prepare": "husky"
  },
  "repository": "https://github.com/Diluka/bull-board-docker",
  "dependencies": {
    "@bull-board/api": "^6.10.0",
    "@bull-board/express": "^6.10.0",
    "bull": "^4.16.5",
    "bullmq": "^5.53.2",
    "connect-ensure-login": "^0.1.1",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "ioredis": "^5.6.1",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/connect-ensure-login": "^0.1.9",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.9.2"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 140,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
